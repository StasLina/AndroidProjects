<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Горизонтальный LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewLinearHorizontal1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/button_background"
            android:text="1"
            android:textColor="#3E2723" />

        <TextView
            android:id="@+id/textViewLinearHorizontal2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/button_text"
            android:background="@color/button_background"/>

        <TextView
            android:id="@+id/textViewLinearHorizontal3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/button_text"
            android:background="@color/button_background"/>
    </LinearLayout>

    <!-- Вертикальный LinearLayout -->
    <LinearLayout
        android:id="@+id/linearLayoutVertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        android:background="@color/button_background">

        <TextView
            android:id="@+id/textViewLinearVertical1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/button_background"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#3E2723" />

        <TextView
            android:id="@+id/textViewLinearVertical2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/button_text"
            android:background="@color/button_background"/>

        <TextView
            android:id="@+id/textViewLinearVertical3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/button_text"
            android:background="@color/button_background"/>
    </LinearLayout>

    <!-- Вложенный ConstraintLayout с уменьшенной высотой на 40 пикселей -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nestedConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="40dp"
        android:background="@color/button_background"
        app:layout_constraintBottom_toTopOf="@id/button"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutVertical">

        <TextView
            android:id="@+id/textViewConstraint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/button_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewConstraint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/button_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewConstraint3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/button_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Кнопка внизу экрана -->
    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Увеличить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</LinearLayout>
